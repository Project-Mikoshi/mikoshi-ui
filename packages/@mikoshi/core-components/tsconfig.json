{
  "extends": "@scaffold/typescript-config/tsconfig.json",
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "types": ["vitest"],
    "outDir": "./dist/",
    "baseUrl": ".",
    "paths": {
      "@mikoshi/core-components": ["src/index.ts"],
      "components/*": ["src/components/*"],
      "utils/*": ["src/utils/*"],
      "constants/*": ["src/constants/*"],
      "types/*": ["src/types/*"],
      "svgs/*": ["src/svgs/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "test/**/*.ts", "test/**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}